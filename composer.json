{
  "name": "8fold/php-markup",
  "description": "8fold Markup makes writing semi-structured data easier while allowing for more dynamism.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Bruce",
      "email": "josh@8fold.pro"
    }
  ],
  "require": {
    "php": "^8.1",
    "8fold/php-html-builder": "^0.6.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.4.3",
    "phpunit/phpunit": "^9.5.13",
    "squizlabs/php_codesniffer": "^3.6.2"
  },
  "autoload": {
    "psr-4": {
      "Eightfold\\Markup\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eightfold\\Markup\\Tests\\": "./tests/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
	"prefer-stable": true,
  "scripts": {
    "prod": "@production",
    "production": [
      "composer dumpautoload -o",
      "@style",
      "@stan",
      "@test"
    ],
    "style": "./vendor/bin/phpcs --standard=phpcs.xml",
    "stan": "./vendor/bin/phpstan analyze",
    "test": "./vendor/bin/phpunit"
  }
}
